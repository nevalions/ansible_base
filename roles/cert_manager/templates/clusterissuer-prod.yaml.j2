apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ cert_manager_clusterissuer_prod_name }}
spec:
  acme:
    email: "{{ cert_manager_acme_email }}"
    server: "{{ cert_manager_acme_server_prod }}"
    privateKeySecretRef:
      name: {{ cert_manager_clusterissuer_prod_private_key_secret_name }}
    solvers:
      - http01:
          ingress:
            class: {{ cert_manager_http01_ingress_class }}
